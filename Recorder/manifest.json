{
  "name": "Recorder",
  "version": "1.0",
  "manifest_version": 2,
  "description": "",
  "background": {
    "scripts": [
      "./src/background.js"
    ]
  },
  "browser_action": {
    "default_icon": "./icons/icon.png",
    "default_popup": "./dist/index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "./src/content/loadTime.js",
        "./src/content/explore.js",
        "./src/content/utils.js"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "debugger"
  ]
}
